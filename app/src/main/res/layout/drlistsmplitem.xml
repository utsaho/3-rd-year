<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drlistcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:paddingVertical="100dp"
    android:background="@color/gray"
    android:layout_weight="1"
    app:cardCornerRadius="10px"
    app:cardElevation="10px"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:textAlignment="center"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40px"
        android:layout_marginVertical="30px"

        android:gravity="center"
        android:orientation="horizontal">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/smpldrpic"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginRight="20dp"
                android:src="@drawable/ppp"
                app:shapeAppearance="@style/circle" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/smpldrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/border"
                android:textSize="18dp"
                android:text="Hare"/>


        </LinearLayout>
    <TextView
        android:id="@+id/phnNmbr"
        android:layout_width="0px"
        android:layout_height="0px"
        android:text=""
        />


    </androidx.cardview.widget.CardView>
