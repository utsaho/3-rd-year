<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegActivity"
    android:orientation="vertical"
    android:background="@drawable/login_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        android:layout_marginRight="25dp"
        >

        <EditText
            android:id="@+id/dob2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:drawableEnd="@drawable/ic_baseline_calendar_month_24"
            android:drawableTint="@color/gray"
            android:hint="Date of Birth"
            android:paddingTop="10dp"
            android:textSize="19sp"></EditText>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/bgSpinner2"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:textAlignment="inherit"
                android:background="@android:drawable/btn_dropdown"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">
            </Spinner>

            <EditText
                android:id="@+id/lastDon2"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:hint="Last Donation"
                android:textSize="19sp"
                android:paddingTop="10dp"
                android:layout_marginStart="20dp"
                android:drawableTint="@color/gray"
                android:drawableEnd="@drawable/ic_baseline_calendar_month_24">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Gender"
                android:textSize="19sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:paddingTop="15dp">
            </TextView>

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:text="Male"
                    android:textSize="20sp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/female2"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:text="Female"
                    android:textSize="20sp">

                </RadioButton>

                <RadioButton
                    android:id="@+id/others2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:checked="false"
                    android:text="Others"
                    android:textSize="20sp"
                    android:paddingEnd="5dp">

                </RadioButton>
            </RadioGroup>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Phone"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTint="@color/gray"
                android:paddingEnd="12dp"
                android:drawableEnd="@drawable/ic_baseline_phone_24">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Username"
                android:backgroundTint="@color/black"
                android:inputType="textPersonName"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingEnd="12dp"
                android:drawableTint="@color/gray"
                android:drawableEnd="@drawable/ic_baseline_person_24">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb2"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="10dp"
                >
            </CheckBox>

            <TextView
                android:layout_width="230dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:text="I agree to the terms and conditions"
                android:textColor="@color/black"
                android:layout_marginTop="10dp">

            </TextView>

        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/userRegBtn2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Register"
            android:enabled="false"
            android:layout_marginStart="120dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/gray"
            />

    </LinearLayout>