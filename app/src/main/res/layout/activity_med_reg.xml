<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedRegActivity"
    android:orientation="vertical"
    android:background="@drawable/login_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Medical Name"
                android:layout_marginStart="5dp"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/black"
                android:drawableTint="@color/gray"
                android:drawableEnd="@drawable/ic_baseline_local_hospital_24"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="180dp"
            android:layout_height="60dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/districtId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="District"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="195dp"
            android:layout_height="60dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/divisionId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Division"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="10dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/webId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Website Address"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contactId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Contact Number"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTint="@color/gray"
                android:drawableEnd="@drawable/ic_baseline_phone_24">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mailId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Email Address"
                android:backgroundTint="@color/black"
                android:inputType="textEmailAddress"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTint="@color/gray"
                android:drawableEnd="@drawable/ic_baseline_email_24">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/usernameId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Username"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:drawableTint="@color/gray"
                android:drawableEnd="@drawable/ic_baseline_person_24">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textAlignment="inherit"
                android:inputType="textPassword"
                >

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Type"
            android:textSize="19sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingTop="15dp">
        </TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/pubId"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:text="Public"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingRight="20dp">

            </RadioButton>

            <RadioButton
                android:id="@+id/priId"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:text="Private"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingRight="20dp">

            </RadioButton>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/photoId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Photo URL"
                android:backgroundTint="@color/black"
                android:inputType="text"
                android:textAlignment="inherit"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <CheckBox
            android:id="@+id/cbId"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            >
        </CheckBox>

        <TextView
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="I agree to the terms and conditions"
            android:textColor="@color/black"
            android:layout_marginTop="10dp">

        </TextView>

    </LinearLayout>

    <Button
        android:id="@+id/medRegId"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Register"
        android:layout_marginStart="120dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/gray"
        android:enabled="false"

        />

</LinearLayout>